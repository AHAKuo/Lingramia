{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/renderer/*": ["src/renderer/src/*"],
      "@/main/*": ["src/main/*"],
      "@/preload/*": ["src/preload/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", ".forge"]
}
