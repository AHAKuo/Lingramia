<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Lingramia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
        x:Class="Lingramia.Views.SelectLocbookDialog"
        Title="Select Destination Locbook"
        Width="400" Height="350"
        WindowStartupLocation="CenterOwner"
        CanResize="True">
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Select Destination Locbook"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>
        
        <!-- Locbooks List -->
        <ScrollViewer Grid.Row="1" 
                      Margin="0,0,0,15">
            <ItemsControl x:Name="LocbooksItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding FileName}"
                                Tag="{Binding}"
                                Click="LocbookButton_Click"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Margin="0,4"
                                Padding="12,8"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10">
            <Button Content="Cancel" 
                    Width="80"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
