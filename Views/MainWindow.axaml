<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Lingramia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="Lingramia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Lingramia - Localization Editor"
        MinWidth="1000" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Top Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" Command="{Binding NewFileCommand}" />
                <MenuItem Header="Open" Command="{Binding OpenFileCommand}" />
                <MenuItem Header="Save" Command="{Binding SaveFileCommand}" />
                <MenuItem Header="Save All" Command="{Binding SaveAllLocbooksCommand}" />
                <Separator />
                <MenuItem Header="Save As" Command="{Binding SaveAsFileCommand}" />
                <Separator />
                <MenuItem Header="Export (Per-Language JSON)" Command="{Binding ExportFileCommand}" />
            </MenuItem>
            <MenuItem Header="Translation">
                <MenuItem Header="Configure API Key" Command="{Binding ConfigureApiKeyCommand}" />
                <MenuItem Header="Clear API Key" Command="{Binding ClearApiKeyCommand}" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Command="{Binding ShowAboutDialogCommand}" />
                <Separator />
                <MenuItem Header="Usage Guide" Command="{Binding ShowUsageGuideCommand}" />
                <MenuItem Header="Translation Help" Command="{Binding ShowTranslationHelpCommand}" />
            </MenuItem>
        </Menu>

        <!-- Bottom Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="#2B2B2B" Padding="10,5" BorderBrush="#3C3C3C" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage}" 
                          Foreground="#E0E0E0"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="{Binding SelectedLocbook.FileName}" 
                              Foreground="#E0E0E0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="â—" 
                              Foreground="#3A7CA5"
                              VerticalAlignment="Center"
                              IsVisible="{Binding SelectedLocbook.HasUnsavedChanges}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Bar -->
        <Border DockPanel.Dock="Top" Background="#2B2B2B" Padding="10" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                          Text="ðŸ” Search:" 
                          FontSize="14"
                          Foreground="#E0E0E0"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" 
                        Text="{Binding SearchQuery, Mode=TwoWay}"
                        Watermark="Search by Page ID, About, or Key..."
                        VerticalAlignment="Center"/>
                <Button Grid.Column="2" 
                       Content="Clear"
                       Command="{Binding ClearSearchCommand}"
                       Margin="10,0,0,0"
                       Padding="15,5"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="260" MaxWidth="480" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="7*" MinWidth="480" />
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Locbooks and Pages -->
            <Border Grid.Column="0" Background="#2B2B2B" BorderBrush="#3C3C3C" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="16" Spacing="12">
                        <TextBlock Text="Locbooks"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="#E0E0E0"/>
                        <TextBlock Text="Manage your open localization books and quickly drill into their pages."
                                  FontSize="12"
                                  Foreground="#8F9BB3"
                                  TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="ðŸ“‚ Open Locbook"
                                   Command="{Binding OpenFileCommand}"
                                   Padding="12,6"
                                   FontSize="12"
                                   ToolTip.Tip="Open an existing locbook file"/>
                            <Button Content="âž• New Locbook"
                                   Command="{Binding NewFileCommand}"
                                   Padding="12,6"
                                   FontSize="12"
                                   ToolTip.Tip="Create a new empty locbook"/>
                        </StackPanel>
                    </StackPanel>

                    <ListBox Grid.Row="1"
                             Margin="8,0"
                             ItemsSource="{Binding OpenLocbooks}"
                             SelectedItem="{Binding SelectedLocbook, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             HorizontalContentAlignment="Stretch"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Margin" Value="4"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover">
                                <Setter Property="Background" Value="#323C4A"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected">
                                <Setter Property="Background" Value="#2B4B6B"/>
                                <Setter Property="BorderBrush" Value="#3A7CA5"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12" CornerRadius="6">
                                    <StackPanel Spacing="10">
                                        <Grid VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                      Text="{Binding DisplayName}"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="#E0E0E0"
                                                      TextTrimming="CharacterEllipsis"
                                                      ToolTip.Tip="{Binding DisplayName}"/>
                                            <Button Grid.Column="1"
                                                    Content="â‹®"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Padding="8,2"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#A0A0A0"
                                                    ToolTip.Tip="Locbook actions">
                                                <Button.Styles>
                                                    <Style Selector="Button:pointerover">
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                        <Setter Property="Background" Value="#3C3C3C"/>
                                                    </Style>
                                                </Button.Styles>
                                                <Button.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="Save"
                                                                 Command="{Binding $parent[Window].DataContext.SaveLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <MenuItem Header="Save As..."
                                                                 Command="{Binding $parent[Window].DataContext.SaveAsLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <MenuItem Header="Export"
                                                                 Command="{Binding $parent[Window].DataContext.ExportLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <Separator />
                                                        <MenuItem Header="Close Locbook"
                                                                 Command="{Binding $parent[Window].DataContext.CloseLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                    </ContextMenu>
                                                </Button.ContextMenu>
                                                <Button.Flyout>
                                                    <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                        <MenuItem Header="Save"
                                                                 Command="{Binding $parent[Window].DataContext.SaveLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <MenuItem Header="Save As..."
                                                                 Command="{Binding $parent[Window].DataContext.SaveAsLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <MenuItem Header="Export"
                                                                 Command="{Binding $parent[Window].DataContext.ExportLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <Separator />
                                                        <MenuItem Header="Close Locbook"
                                                                 Command="{Binding $parent[Window].DataContext.CloseLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                    </MenuFlyout>
                                                </Button.Flyout>
                                            </Button>
                                        </Grid>

                                        <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}" Background="#242B33" BorderBrush="#3C3C3C" BorderThickness="1" CornerRadius="4">
                                            <Expander.Header>
                                                <Grid ColumnSpacing="6">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="ðŸ“„" FontSize="14"/>
                                                    <TextBlock Grid.Column="1"
                                                              Text="Pages"
                                                              FontSize="12"
                                                              Foreground="#C0C8D6"/>
                                                </Grid>
                                            </Expander.Header>
                                            <ListBox ItemsSource="{Binding Pages}"
                                                     SelectedItem="{Binding SelectedPage, Mode=TwoWay}"
                                                     Margin="4"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     HorizontalContentAlignment="Stretch">
                                                <ListBox.Styles>
                                                    <Style Selector="ListBoxItem">
                                                        <Setter Property="Margin" Value="2"/>
                                                        <Setter Property="Padding" Value="6"/>
                                                        <Setter Property="CornerRadius" Value="4"/>
                                                    </Style>
                                                    <Style Selector="ListBoxItem:pointerover">
                                                        <Setter Property="Background" Value="#3A3F4A"/>
                                                    </Style>
                                                    <Style Selector="ListBoxItem:selected">
                                                        <Setter Property="Background" Value="#3A7CA5"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Style>
                                                </ListBox.Styles>
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Spacing="2">
                                                            <TextBlock Text="{Binding PageId}"
                                                                      FontWeight="SemiBold"
                                                                      Foreground="#E0E0E0"/>
                                                            <TextBlock Text="{Binding AboutPage}"
                                                                      FontSize="11"
                                                                      Foreground="#98A1B5"
                                                                      TextWrapping="Wrap"
                                                                      MaxWidth="220"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Expander>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Grid.Row="2"
                           Background="#232A32"
                           BorderBrush="#3C3C3C"
                           BorderThickness="0,1,0,0"
                           Padding="14">
                        <StackPanel Spacing="10">
                            <TextBlock Text="{Binding SelectedLocbook.DisplayName, StringFormat='Editing: {0}'}"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="#3A9BCD"
                                      TextTrimming="CharacterEllipsis"
                                      HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal"
                                       HorizontalAlignment="Center"
                                       Spacing="10">
                                <Button Content="âž• Add Page"
                                       Command="{Binding AddPageCommand}"
                                       Padding="12,6"/>
                                <Button Content="ðŸ—‘ï¸ Delete Page"
                                       Command="{Binding DeletePageCommand}"
                                       Padding="12,6"
                                       IsEnabled="{Binding HasSelectedPage}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="4" Background="#3C3C3C" />

            <!-- Main Panel - Fields -->
            <Border Grid.Column="2" Background="#1E1E1E">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!-- Page Info Header -->
                    <Border Grid.Row="0"
                           Background="#2B2B2B"
                           BorderBrush="#3C3C3C"
                           BorderThickness="1"
                           Padding="20"
                           CornerRadius="8">
                        <Grid ColumnSpacing="12" RowSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                      Text="Page ID"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#E0E0E0"
                                      VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                    Text="{Binding SelectedLocbook.SelectedPage.PageId, Mode=TwoWay}"
                                    IsEnabled="{Binding HasSelectedPage}"
                                    Watermark="Enter a unique page identifier"
                                    Padding="10,6"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                      Text="About"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#E0E0E0"
                                      VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                    Text="{Binding SelectedLocbook.SelectedPage.AboutPage, Mode=TwoWay}"
                                    IsEnabled="{Binding HasSelectedPage}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    Watermark="Describe the purpose of this page"
                                    Padding="10,6"
                                    MinHeight="60"/>
                        </Grid>
                    </Border>

                    <!-- Field Actions -->
                    <StackPanel Grid.Row="1"
                               Orientation="Horizontal"
                               Margin="0,16,0,12"
                               Spacing="12">
                        <Button Content="âž• Add Field"
                               Command="{Binding AddFieldCommand}"
                               IsEnabled="{Binding HasSelectedPage}"
                               Padding="12,6"/>
                        <Button Content="ðŸŒ Translate Page"
                               Command="{Binding TranslatePageCommand}"
                               IsEnabled="{Binding HasSelectedPage}"
                               Padding="12,6"/>
                    </StackPanel>

                    <!-- Fields List -->
                    <Border Grid.Row="2"
                            Background="#23282F"
                            CornerRadius="8"
                            BorderBrush="#3C3C3C"
                            BorderThickness="1">
                        <ScrollViewer Padding="20"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <!-- Empty State Message -->
                                <Border IsVisible="{Binding !HasSelectedPage}"
                                       Background="#2B2B2B"
                                       BorderBrush="#3C3C3C"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="40"
                                       Margin="0,20">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
                                        <TextBlock Text="ðŸ“„"
                                                  FontSize="48"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="No Page Selected"
                                                  FontSize="20"
                                                  FontWeight="Bold"
                                                  Foreground="#E0E0E0"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Create a new page or select one from the sidebar to begin working"
                                                  FontSize="13"
                                                  Foreground="#A0A0A0"
                                                  HorizontalAlignment="Center"
                                                  TextWrapping="Wrap"
                                                  TextAlignment="Center"
                                                  MaxWidth="360"/>
                                    </StackPanel>
                                </Border>

                                <ItemsControl ItemsSource="{Binding SelectedLocbook.SelectedPage.Fields}"
                                             IsVisible="{Binding HasSelectedPage}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Expander Background="#2B2B2B"
                                                     BorderBrush="#3C3C3C"
                                                     BorderThickness="1"
                                                     Margin="0,0,0,16"
                                                     CornerRadius="6"
                                                     IsExpanded="True">
                                                <Expander.Header>
                                                    <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                                                    <TextBlock Text="ðŸ”‘" FontSize="14"/>
                                                    <TextBlock Text="{Binding Key}" 
                                                              FontWeight="Bold"
                                                              FontSize="14"
                                                              Foreground="#E0E0E0"/>
                                                    <TextBlock Text="-" 
                                                              Foreground="#808080"
                                                              FontSize="14"/>
                                                    <TextBlock Text="{Binding OriginalValue}" 
                                                              FontSize="14"
                                                              Foreground="#A0A0A0"
                                                              TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                                    <Button Content="ðŸŒ" 
                                                           Padding="5"
                                                           Command="{Binding $parent[Window].DataContext.TranslateFieldCommand}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip.Tip="Translate Field"/>
                                                    <Button Content="ðŸ—‘ï¸" 
                                                           Padding="5"
                                                           Command="{Binding $parent[Window].DataContext.DeleteFieldCommand}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip.Tip="Delete Field"/>
                                                </StackPanel>
                                            </Grid>
                                        </Expander.Header>
                                        <Border Padding="15" Background="#1E1E1E">
                                            <StackPanel Spacing="10">
                                                <!-- Field Key and Original Value -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                                              Text="Key:" 
                                                              FontWeight="Bold"
                                                              Foreground="#E0E0E0"
                                                              VerticalAlignment="Top"
                                                              Margin="0,8,0,0"/>
                                                    <TextBox Grid.Row="0" Grid.Column="1" 
                                                            Text="{Binding Key}"
                                                            AcceptsReturn="False"
                                                            Margin="5,0,0,0"/>

                                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                                              Text="Original:" 
                                                              FontWeight="Bold"
                                                              Foreground="#E0E0E0"
                                                              Margin="0,8,0,0"
                                                              VerticalAlignment="Top"/>
                                                    <TextBox Grid.Row="1" Grid.Column="1" 
                                                            Text="{Binding OriginalValue}"
                                                            AcceptsReturn="True"
                                                            TextWrapping="Wrap"
                                                            MinHeight="60"
                                                            Margin="5,5,0,0"/>
                                                </Grid>

                                                <!-- Variants -->
                                                <TextBlock Text="Translations:" 
                                                          FontWeight="Bold"
                                                          Foreground="#E0E0E0"
                                                          Margin="0,10,0,0"/>
                                                <ItemsControl ItemsSource="{Binding Variants}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,5">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="70" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBox Grid.Column="0" 
                                                                        Text="{Binding Language}"
                                                                        Width="60"
                                                                        VerticalAlignment="Top"
                                                                        Margin="0,0,5,0"/>
                                                                <TextBox Grid.Column="1" 
                                                                        Text="{Binding Value}"
                                                                        AcceptsReturn="True"
                                                                        TextWrapping="Wrap"
                                                                        MinHeight="60"
                                                                        Margin="0,0,5,0">
                                                                    <TextBox.ContextMenu>
                                                                        <ContextMenu>
                                                                            <MenuItem Header="Translate This Variant" 
                                                                                     Command="{Binding $parent[Window].DataContext.TranslateVariantCommand}"
                                                                                     CommandParameter="{Binding}" />
                                                                        </ContextMenu>
                                                                    </TextBox.ContextMenu>
                                                                </TextBox>
                                                                <Button Grid.Column="2" 
                                                                       Content="ðŸ—‘ï¸"
                                                                       Padding="5"
                                                                       VerticalAlignment="Top"
                                                                       Command="{Binding $parent[Window].DataContext.DeleteVariantCommand}"
                                                                       CommandParameter="{Binding}"
                                                                       ToolTip.Tip="Delete Variant"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <!-- Field Actions -->
                                                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,10,0,0">
                                                    <Button Content="âž• Add Variant" 
                                                           Padding="8,4"
                                                           Command="{Binding $parent[Window].DataContext.AddVariantCommand}"
                                                           CommandParameter="{Binding}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
