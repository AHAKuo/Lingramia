<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Lingramia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="Lingramia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/lingramia-logo.ico"
        Title="Lingramia"
        MinWidth="1000" MinHeight="600">

    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+N" Command="{Binding NewFileCommand}"/>
        <KeyBinding Gesture="Ctrl+O" Command="{Binding OpenFileCommand}"/>
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveFileCommand}"/>
        <KeyBinding Gesture="Ctrl+Shift+S" Command="{Binding SaveAllLocbooksCommand}"/>
        <KeyBinding Gesture="Ctrl+E" Command="{Binding ExportFileCommand}"/>
        <KeyBinding Gesture="Ctrl+F" Command="{Binding FocusSearchCommand}"/>
        <KeyBinding Gesture="Ctrl+Shift+F" Command="{Binding ToggleMissingOnlyCommand}"/>
        <KeyBinding Gesture="Alt+Down" Command="{Binding NextPageCommand}"/>
        <KeyBinding Gesture="Alt+Up" Command="{Binding PrevPageCommand}"/>
        <KeyBinding Gesture="Escape" Command="{Binding ClearSearchCommand}"/>
        <!-- Undo/Redo shortcuts - handled in code-behind with TextBox focus detection -->
    </Window.KeyBindings>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Top Menu Bar with Accent Strip -->
        <StackPanel DockPanel.Dock="Top">
            <Menu Background="{StaticResource BrushTopBarBackground}">
            <MenuItem Header="File">
                <MenuItem Header="New" Command="{Binding NewFileCommand}" />
                <MenuItem Header="Open" Command="{Binding OpenFileCommand}" />
                <MenuItem Header="Save" Command="{Binding SaveFileCommand}" />
                <MenuItem Header="Save All" Command="{Binding SaveAllLocbooksCommand}" />
                <Separator />
                <MenuItem Header="Save As" Command="{Binding SaveAsFileCommand}" />
                <Separator />
                <MenuItem Header="Export (Per-Language JSON)" Command="{Binding ExportFileCommand}" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo" Command="{Binding UndoCommand}" InputGesture="Ctrl+Z" IsEnabled="{Binding CanUndo}" />
                <MenuItem Header="Redo" Command="{Binding RedoCommand}" InputGesture="Ctrl+Y" IsEnabled="{Binding CanRedo}" />
            </MenuItem>
            <MenuItem Header="Translation">
                <MenuItem Header="Configure API Key" Command="{Binding ConfigureApiKeyCommand}" />
                <MenuItem Header="Clear API Key" Command="{Binding ClearApiKeyCommand}" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Command="{Binding ShowAboutDialogCommand}" />
                <Separator />
                <MenuItem Header="Usage Guide" Command="{Binding ShowUsageGuideCommand}" />
                <MenuItem Header="Translation Help" Command="{Binding ShowTranslationHelpCommand}" />
            </MenuItem>
            </Menu>
            <!-- Accent Strip -->
            <Border Height="2" Margin="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0" Color="{StaticResource ColorAccentPrimary}"/>
                        <GradientStop Offset="1" Color="{StaticResource ColorAccentSecondary}"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </StackPanel>

        <!-- Bottom Status Bar -->
        <Border DockPanel.Dock="Bottom" 
                Background="{StaticResource BrushSecondaryBackground}" 
                Padding="10,5" 
                BorderBrush="{StaticResource BrushBorderDivider}" 
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage}" 
                          Foreground="{StaticResource BrushTextPrimary}"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="{Binding SelectedLocbook.FileName}" 
                              Foreground="{StaticResource BrushTextPrimary}"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="â—" 
                              Foreground="{StaticResource BrushAccentSecondary}"
                              VerticalAlignment="Center"
                              IsVisible="{Binding SelectedLocbook.HasUnsavedChanges}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Bar + Filters -->
        <Border DockPanel.Dock="Top" 
                Background="{StaticResource BrushTopBarBackground}" 
                Padding="10" 
                BorderBrush="{StaticResource BrushBorderDivider}" 
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                          Text="ðŸ” Search:" 
                          FontSize="14"
                          Foreground="{StaticResource BrushTextPrimary}"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" 
                        x:Name="SearchTextBox"
                        Text="{Binding SearchQuery, Mode=TwoWay}"
                        Watermark="Search Page ID, About, Key, Original, or Variant..."
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"/>
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center" Margin="10,0,0,0">
                    <CheckBox Content="Missing only" IsChecked="{Binding ShowMissingOnly, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock Text="Lang:" Foreground="{StaticResource BrushTextPrimary}" VerticalAlignment="Center"/>
                    <TextBox Width="80" Text="{Binding LanguageFilter, Mode=TwoWay}" Watermark="All"/>
                </StackPanel>
                <Button Grid.Column="4" 
                       Content="Clear"
                       Command="{Binding ClearSearchCommand}"
                       Margin="10,0,0,0"
                       Padding="15,5"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="260" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Locbooks and Pages -->
            <Border Grid.Column="0" 
                    Background="{StaticResource BrushSecondaryBackground}" 
                    BorderBrush="{StaticResource BrushBorderDivider}" 
                    BorderThickness="0,0,1,0">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header and Locbook Actions -->
                    <StackPanel Grid.Row="0" Margin="16,16,16,12" Spacing="12">
                        <TextBlock Text="Locbooks"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource BrushTextPrimary}"/>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="ðŸ“‚ Open"
                                   Command="{Binding OpenFileCommand}"
                                   Padding="12,6"
                                   FontSize="12"
                                   ToolTip.Tip="Open existing locbook file"/>
                            <Button Content="âž• New"
                                   Command="{Binding NewFileCommand}"
                                   Padding="12,6"
                                   FontSize="12"
                                   ToolTip.Tip="Create new locbook"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Locbooks List -->
                    <ListBox Grid.Row="1"
                             Margin="16,0"
                             ItemsSource="{Binding OpenLocbooks}"
                             SelectedItem="{Binding SelectedLocbook, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,12"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6"
                                        BorderBrush="{StaticResource BrushBorderDivider}"
                                        BorderThickness="1"
                                        Background="{StaticResource BrushSecondaryBackground}"
                                        Classes.selectedLocbook="{Binding IsSelected}"
                                        HorizontalAlignment="Stretch">
                                    <Border.Styles>
                                        <Style Selector="Border">
                                            <Setter Property="Padding" Value="4"/>
                                        </Style>
                                        <Style Selector="Border.selectedLocbook">
                                            <Setter Property="BorderBrush" Value="{StaticResource BrushAccentPrimary}"/>
                                            <Setter Property="BorderThickness" Value="2,0,0,0"/>
                                            <Setter Property="Background" Value="{StaticResource BrushActiveLocbook}"/>
                                            <Setter Property="Padding" Value="4"/>
                                        </Style>
                                        <Style Selector="Border:pointerover">
                                            <Setter Property="Background" Value="{StaticResource BrushHoverState}"/>
                                        </Style>
                                    </Border.Styles>
                                    <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              HorizontalAlignment="Stretch">
                                        <Expander.Header>
                                            <Grid Margin="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                          Text="{Binding DisplayName}"
                                                          FontSize="14"
                                                          FontWeight="SemiBold"
                                                          Foreground="{StaticResource BrushTextPrimary}"
                                                          VerticalAlignment="Center"
                                                          TextTrimming="CharacterEllipsis"
                                                          ToolTip.Tip="{Binding DisplayName}">
                                                    <TextBlock.Styles>
                                                        <Style Selector="TextBlock">
                                                            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
                                                        </Style>
                                                        <Style Selector="Border.selectedLocbook TextBlock">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Style>
                                                    </TextBlock.Styles>
                                                    <TextBlock.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem Header="Save"
                                                                     Command="{Binding $parent[Window].DataContext.SaveLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <MenuItem Header="Save As..."
                                                                     Command="{Binding $parent[Window].DataContext.SaveAsLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <MenuItem Header="Export (JSON)"
                                                                     Command="{Binding $parent[Window].DataContext.ExportLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <MenuItem Header="Import..."
                                                                     Command="{Binding $parent[Window].DataContext.ImportLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <MenuItem Header="Export Locbook..."
                                                                     Command="{Binding $parent[Window].DataContext.ExportLocbookDialogCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <Separator />
                                                            <MenuItem Header="Add Language Codes..."
                                                                     Command="{Binding $parent[Window].DataContext.BulkAddLanguageCodesToLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <MenuItem Header="Translate Locbook"
                                                                     Command="{Binding $parent[Window].DataContext.TranslateLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <Separator />
                                                            <MenuItem Header="Close Locbook"
                                                                     Command="{Binding $parent[Window].DataContext.CloseLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                        </ContextMenu>
                                                    </TextBlock.ContextMenu>
                                                </TextBlock>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                                    <Button Content="âž•"
                                                            Padding="8,2"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            ToolTip.Tip="Add Page"
                                                            Command="{Binding $parent[Window].DataContext.AddPageToLocbookCommand}"
                                                            CommandParameter="{Binding}">
                                                        <Button.Styles>
                                                            <Style Selector="Button:pointerover">
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Setter Property="Background" Value="{StaticResource BrushSurfaceHover}"/>
                                                            </Style>
                                                        </Button.Styles>
                                                    </Button>
                                                    <Button Content="â‹®"
                                                            FontSize="16"
                                                            FontWeight="Bold"
                                                            Padding="8,2"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Foreground="{StaticResource BrushTextSecondary}"
                                                            ToolTip.Tip="Locbook Actions (click for menu)"
                                                            Name="LocbookMenuButton">
                                                        <Button.Styles>
                                                            <Style Selector="Button:pointerover">
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Setter Property="Background" Value="{StaticResource BrushSurfaceHover}"/>
                                                            </Style>
                                                        </Button.Styles>
                                                        <Button.ContextMenu>
                                                            <ContextMenu Name="LocbookContextMenu">
                                                                <MenuItem Header="Save"
                                                                         Command="{Binding $parent[Window].DataContext.SaveLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <MenuItem Header="Save As..."
                                                                         Command="{Binding $parent[Window].DataContext.SaveAsLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <MenuItem Header="Export (JSON)"
                                                                         Command="{Binding $parent[Window].DataContext.ExportLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <MenuItem Header="Import..."
                                                                         Command="{Binding $parent[Window].DataContext.ImportLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <MenuItem Header="Export Locbook..."
                                                                         Command="{Binding $parent[Window].DataContext.ExportLocbookDialogCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <Separator />
                                                                <MenuItem Header="Add Language Codes..."
                                                                         Command="{Binding $parent[Window].DataContext.BulkAddLanguageCodesToLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <MenuItem Header="Translate Locbook"
                                                                         Command="{Binding $parent[Window].DataContext.TranslateLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <Separator />
                                                                <MenuItem Header="Close Locbook"
                                                                         Command="{Binding $parent[Window].DataContext.CloseLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                            </ContextMenu>
                                                        </Button.ContextMenu>
                                                        <Button.Flyout>
                                                            <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                                <MenuItem Header="Save"
                                                                         Command="{Binding $parent[Window].DataContext.SaveLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <MenuItem Header="Save As..."
                                                                         Command="{Binding $parent[Window].DataContext.SaveAsLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <MenuItem Header="Export (JSON)"
                                                                         Command="{Binding $parent[Window].DataContext.ExportLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <MenuItem Header="Import..."
                                                                         Command="{Binding $parent[Window].DataContext.ImportLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <MenuItem Header="Export Locbook..."
                                                                         Command="{Binding $parent[Window].DataContext.ExportLocbookDialogCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <Separator />
                                                                <MenuItem Header="Add Language Codes..."
                                                                         Command="{Binding $parent[Window].DataContext.BulkAddLanguageCodesToLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <MenuItem Header="Translate Locbook"
                                                                         Command="{Binding $parent[Window].DataContext.TranslateLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                                <Separator />
                                                                <MenuItem Header="Close Locbook"
                                                                         Command="{Binding $parent[Window].DataContext.CloseLocbookCommand}"
                                                                         CommandParameter="{Binding}" />
                                                            </MenuFlyout>
                                                        </Button.Flyout>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Expander.Header>
                                        <ItemsControl ItemsSource="{Binding Pages}" Margin="12,0,4,8">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding PageId}"
                                                           IsVisible="{Binding IsSearchMatch}"
                                                           Command="{Binding $parent[Window].DataContext.SelectPageCommand}"
                                                           CommandParameter="{Binding}"
                                                           Margin="0,4"
                                                           Padding="10,6"
                                                           HorizontalAlignment="Stretch"
                                                           HorizontalContentAlignment="Left"
                                                           Classes.selected="{Binding IsSelected}">
                                                        <Button.Styles>
                                                            <Style Selector="Button">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource BrushBorderDivider}"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                                <Setter Property="CornerRadius" Value="4"/>
                                                                <Setter Property="Foreground" Value="{StaticResource BrushTextSecondary}"/>
                                                            </Style>
                                                            <Style Selector="Button:pointerover">
                                                                <Setter Property="Background" Value="{StaticResource BrushHoverState}"/>
                                                                <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
                                                            </Style>
                                                            <Style Selector="Button:selected">
                                                                <Setter Property="Background" Value="{StaticResource BrushSelectedPage}"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource BrushAccentPrimary}"/>
                                                            </Style>
                                                            <Style Selector="Button.selected:pointerover">
                                                                <Setter Property="Background" Value="{StaticResource BrushAccentPrimary}"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Style>
                                                        </Button.Styles>
                                                        <Button.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Add Page"
                                                                          Command="{Binding $parent[Window].DataContext.AddPageToLocbookCommand}"
                                                                          CommandParameter="{Binding $parent[ItemsControl].DataContext}" />
                                                                <MenuItem Header="Duplicate Page"
                                                                          Command="{Binding $parent[Window].DataContext.DuplicatePageCtxCommand}"
                                                                          CommandParameter="{Binding}" />
                                                                <MenuItem Header="Delete Page"
                                                                          Command="{Binding $parent[Window].DataContext.DeletePageCtxCommand}"
                                                                          CommandParameter="{Binding}" />
                                                            </ContextMenu>
                                                        </Button.ContextMenu>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Page Actions removed; moved to context menus and header -->
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1"
                          Width="6"
                          Background="{StaticResource BrushBorderDivider}"
                          HorizontalAlignment="Center"/>

            <!-- Main Panel - Fields -->
            <Border Grid.Column="2" Background="{StaticResource BrushPrimaryBackground}" Padding="24,16,24,24">
                <Grid RowDefinitions="Auto,Auto,*" RowSpacing="16">
                    <!-- Page Info Header -->
                    <Border Grid.Row="0"
                            Background="{StaticResource BrushSecondaryBackground}"
                            BorderBrush="{StaticResource BrushBorderDivider}"
                            BorderThickness="1"
                            Padding="18"
                            CornerRadius="6">
                        <Expander IsExpanded="False"
                                  HorizontalAlignment="Stretch">
                            <Expander.Header>
                                <TextBlock Text="Page Info"
                                          FontWeight="Bold"
                                          FontSize="14"
                                          Foreground="{StaticResource BrushTextPrimary}"
                                          Margin="4"/>
                            </Expander.Header>
                            <Border Padding="12,8" Background="{StaticResource BrushPrimaryBackground}">
                                <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="10">
                                    <!-- Page Name (Mandatory) -->
                                    <StackPanel Grid.Row="0"
                                               Grid.Column="0"
                                               Orientation="Horizontal"
                                               VerticalAlignment="Center">
                                        <TextBlock Text="Page Name:"
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource BrushTextPrimary}"/>
                                        <TextBlock Text=" *"
                                                  FontWeight="Bold"
                                                  Foreground="#E74C3C"
                                                  ToolTip.Tip="Mandatory field"/>
                                    </StackPanel>
                                    <TextBox Grid.Row="0"
                                            Grid.Column="1"
                                            Text="{Binding SelectedLocbook.SelectedPage.PageId, Mode=TwoWay}"
                                            Watermark="Required"
                                            IsEnabled="{Binding HasSelectedPage}"
                                            Margin="0"
                                            HorizontalAlignment="Stretch"/>
                                    
                                    <!-- About Field -->
                                    <TextBlock Grid.Row="1"
                                              Grid.Column="0"
                                              Text="About:"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource BrushTextPrimary}"
                                              VerticalAlignment="Top"
                                              Margin="0,8,0,0"/>
                                    <TextBox Grid.Row="1"
                                            Grid.Column="1"
                                            Text="{Binding SelectedLocbook.SelectedPage.AboutPage, Mode=TwoWay}"
                                            IsEnabled="{Binding HasSelectedPage}"
                                            AcceptsReturn="True"
                                            TextWrapping="Wrap"
                                            MinHeight="60"
                                            Margin="0,8,0,0"
                                            HorizontalAlignment="Stretch"
                                            FlowDirection="{Binding SelectedLocbook.SelectedPage.AboutFlowDirection}"
                                            TextAlignment="{Binding SelectedLocbook.SelectedPage.AboutTextAlignment}"/>
                                </Grid>
                            </Border>
                        </Expander>
                    </Border>

                    <!-- Field Actions -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                Spacing="12">
                        <Button Content="âž• Add Field"
                               Command="{Binding AddFieldCommand}"
                               IsEnabled="{Binding HasSelectedPage}"
                               Padding="14,8"/>
                        <Button Content="ðŸŒ Translate Page"
                               Command="{Binding TranslatePageCommand}"
                               IsEnabled="{Binding HasSelectedPage}"
                               Padding="14,8"/>
                    </StackPanel>

                    <!-- Fields List -->
                    <ScrollViewer Grid.Row="2"
                                  Background="Transparent"
                                  VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <!-- Empty State Message -->
                            <Border IsVisible="{Binding !HasSelectedPage}"
                                   Background="{StaticResource BrushSecondaryBackground}"
                                   BorderBrush="{StaticResource BrushBorderDivider}"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Padding="40"
                                   Margin="40">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="18">
                                    <TextBlock Text="ðŸ“„"
                                              FontSize="48"
                                              Foreground="{StaticResource BrushDisabledText}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="No Page Selected"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource BrushTextPrimary}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Create a new page or select one from the sidebar to begin working"
                                              FontSize="13"
                                              Foreground="{StaticResource BrushPlaceholder}"
                                              HorizontalAlignment="Center"
                                              TextWrapping="Wrap"
                                              TextAlignment="Center"
                                              MaxWidth="360"/>
                                </StackPanel>
                            </Border>

                            <ItemsControl ItemsSource="{Binding SelectedLocbook.SelectedPage.Fields}"
                                         Margin="0"
                                         IsVisible="{Binding HasSelectedPage}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Expander Background="{StaticResource BrushSecondaryBackground}"
                                                 BorderBrush="{StaticResource BrushBorderDivider}"
                                                 BorderThickness="1"
                                                 Margin="0,0,0,12"
                                                 CornerRadius="6"
                                                 IsExpanded="False"
                                                 HorizontalAlignment="Stretch">
                                            <Expander.Header>
                                                <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                                                    <TextBlock Text="ðŸ”‘" FontSize="14"/>
                                                    <TextBlock Text="{Binding Key}" 
                                                              FontWeight="Bold"
                                                              FontSize="14"
                                                              Foreground="{StaticResource BrushTextPrimary}"/>
                                                    <TextBlock Text="-" 
                                                              Foreground="{StaticResource BrushTextSecondary}"
                                                              FontSize="14"/>
                                                    <TextBlock Text="{Binding OriginalValue}" 
                                                              FontSize="14"
                                                              Foreground="{StaticResource BrushTextSecondary}"
                                                              TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                                    <Button Content="ðŸŒ" 
                                                           Padding="5"
                                                           Command="{Binding $parent[Window].DataContext.TranslateFieldCommand}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip.Tip="Translate Field"/>
                                                    <Button Content="ðŸ“„"
                                                           Padding="5"
                                                           Command="{Binding $parent[Window].DataContext.DuplicateFieldCommand}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip.Tip="Duplicate Field"/>
                                                    <Button Content="ðŸ—‘ï¸" 
                                                           Padding="5"
                                                           Command="{Binding $parent[Window].DataContext.DeleteFieldCommand}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip.Tip="Delete Field"/>
                                                </StackPanel>
                                            </Grid>
                                        </Expander.Header>
                                        <Border Padding="15" Background="{StaticResource BrushPrimaryBackground}">
                                            <StackPanel Spacing="10">
                                                <!-- Field Key and Original Value -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel Grid.Row="0" Grid.Column="0"
                                                               Orientation="Horizontal"
                                                               VerticalAlignment="Top"
                                                               Margin="0,8,0,0">
                                                        <TextBlock Text="Key:" 
                                                                  FontWeight="Bold"
                                                                  Foreground="{StaticResource BrushTextPrimary}"/>
                                                        <TextBlock Text=" *"
                                                                  FontWeight="Bold"
                                                                  Foreground="#E74C3C"
                                                                  ToolTip.Tip="Mandatory field"/>
                                                    </StackPanel>
                                                    <TextBox Grid.Row="0" Grid.Column="1" 
                                                            Text="{Binding Key}"
                                                            AcceptsReturn="False"
                                                            Margin="5,0,0,0"
                                                            HorizontalAlignment="Stretch"/>

                                                    <StackPanel Grid.Row="1" Grid.Column="0"
                                                               Orientation="Horizontal"
                                                               VerticalAlignment="Top"
                                                               Margin="0,8,0,0">
                                                        <TextBlock Text="Original:" 
                                                                  FontWeight="Bold"
                                                                  Foreground="{StaticResource BrushTextPrimary}"/>
                                                        <TextBlock Text=" *"
                                                                  FontWeight="Bold"
                                                                  Foreground="#E74C3C"
                                                                  ToolTip.Tip="Mandatory field"/>
                                                    </StackPanel>
                                                    <TextBox Grid.Row="1" Grid.Column="1" 
                                                            Text="{Binding OriginalValue}"
                                                            AcceptsReturn="True"
                                                            TextWrapping="Wrap"
                                                            MinHeight="60"
                                                            Margin="5,5,0,0"
                                                            HorizontalAlignment="Stretch"
                                                            FlowDirection="{Binding OriginalFlowDirection}"
                                                            TextAlignment="{Binding OriginalTextAlignment}">
                                                        <TextBox.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="Match Similar Fields" 
                                                                         Command="{Binding $parent[Window].DataContext.MatchSimilarFieldsCommand}"
                                                                         CommandParameter="{Binding}"
                                                                         ToolTip.Tip="Copy Key and Variants to all fields with same Original Value" />
                                                            </ContextMenu>
                                                        </TextBox.ContextMenu>
                                                    </TextBox>
                                                </Grid>

                                                <!-- Variants -->
                                                <TextBlock Text="Translations:" 
                                                          FontWeight="Bold"
                                                          Foreground="{StaticResource BrushTextPrimary}"
                                                          Margin="0,10,0,0"/>
                                                <ItemsControl ItemsSource="{Binding Variants}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,5">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBox Grid.Column="0" 
                                                                        Text="{Binding Language}"
                                                                        MinWidth="80"
                                                                        VerticalAlignment="Top"
                                                                        Margin="0,0,5,0"/>
                                                                <TextBox Grid.Column="1" 
                                                                        Text="{Binding Value}"
                                                                        AcceptsReturn="True"
                                                                        TextWrapping="Wrap"
                                                                        MinHeight="60"
                                                                        Margin="0,0,5,0"
                                                                        HorizontalAlignment="Stretch"
                                                                        FlowDirection="{Binding FlowDirection}"
                                                                        TextAlignment="{Binding TextAlignment}">
                                                                    <TextBox.ContextMenu>
                                                                        <ContextMenu>
                                                                            <MenuItem Header="Translate This Variant" 
                                                                                     Command="{Binding $parent[Window].DataContext.TranslateVariantCommand}"
                                                                                     CommandParameter="{Binding}" />
                                                                        </ContextMenu>
                                                                    </TextBox.ContextMenu>
                                                                </TextBox>
                                                                <Button Grid.Column="2" 
                                                                       Content="ðŸ—‘ï¸"
                                                                       Padding="5"
                                                                       VerticalAlignment="Top"
                                                                       Command="{Binding $parent[Window].DataContext.DeleteVariantCommand}"
                                                                       CommandParameter="{Binding}"
                                                                       ToolTip.Tip="Delete Variant"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <!-- Field Actions -->
                                                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,10,0,0">
                                                    <Button Content="âž• Add Variant" 
                                                           Padding="8,4"
                                                           Command="{Binding $parent[Window].DataContext.AddVariantCommand}"
                                                           CommandParameter="{Binding}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
