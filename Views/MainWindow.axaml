<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Lingramia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="1200"
        d:DesignHeight="700"
        x:Class="Lingramia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Lingramia - Localization Editor"
        MinWidth="1100"
        MinHeight="650">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Top Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="New" Command="{Binding NewFileCommand}" />
                <MenuItem Header="Open" Command="{Binding OpenFileCommand}" />
                <MenuItem Header="Save" Command="{Binding SaveFileCommand}" />
                <MenuItem Header="Save All" Command="{Binding SaveAllLocbooksCommand}" />
                <Separator />
                <MenuItem Header="Save As" Command="{Binding SaveAsFileCommand}" />
                <Separator />
                <MenuItem Header="Export (Per-Language JSON)" Command="{Binding ExportFileCommand}" />
            </MenuItem>
            <MenuItem Header="Translation">
                <MenuItem Header="Configure API Key" Command="{Binding ConfigureApiKeyCommand}" />
                <MenuItem Header="Clear API Key" Command="{Binding ClearApiKeyCommand}" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Command="{Binding ShowAboutDialogCommand}" />
                <Separator />
                <MenuItem Header="Usage Guide" Command="{Binding ShowUsageGuideCommand}" />
                <MenuItem Header="Translation Help" Command="{Binding ShowTranslationHelpCommand}" />
            </MenuItem>
        </Menu>

        <!-- Search Bar -->
        <Border Grid.Row="1"
                Background="#2B2B2B"
                Padding="16,12"
                BorderBrush="#3C3C3C"
                BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                <TextBlock Grid.Column="0"
                          Text="ðŸ” Search"
                          FontSize="15"
                          FontWeight="SemiBold"
                          Foreground="#E0E0E0"
                          VerticalAlignment="Center"/>
                <TextBox Grid.Column="1"
                        Text="{Binding SearchQuery, Mode=TwoWay}"
                        Watermark="Search by Page ID, About, or Key..."
                        VerticalAlignment="Center"
                        Margin="0"/>
                <Button Grid.Column="2"
                       Content="Clear"
                       Command="{Binding ClearSearchCommand}"
                       Padding="18,6"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" ColumnDefinitions="320,6,*">
            <!-- Left Sidebar - Locbooks and Pages -->
            <Border Grid.Column="0"
                    Background="#1F1F1F"
                    BorderBrush="#3C3C3C"
                    BorderThickness="0,0,1,0"
                    Padding="18">
                <Grid RowDefinitions="Auto,*,Auto" RowSpacing="18">
                    <StackPanel Orientation="Vertical" Spacing="12">
                        <TextBlock Text="Locbooks"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="#FFFFFF"/>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="ðŸ“‚ Open"
                                   Command="{Binding OpenFileCommand}"
                                   Padding="14,6"
                                   ToolTip.Tip="Open an existing locbook"/>
                            <Button Content="âž• New"
                                   Command="{Binding NewFileCommand}"
                                   Padding="14,6"
                                   ToolTip.Tip="Create a new locbook"/>
                        </StackPanel>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ListBox ItemsSource="{Binding OpenLocbooks}"
                                 SelectedItem="{Binding SelectedLocbook, Mode=TwoWay}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Stretch">
                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,4,0,0"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                                <Style Selector="ListBoxItem:pointerover">
                                    <Setter Property="Background" Value="#2D2D2D"/>
                                </Style>
                                <Style Selector="ListBoxItem:selected">
                                    <Setter Property="Background" Value="#2B4B6B"/>
                                    <Setter Property="BorderBrush" Value="#3A7CA5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </ListBox.Styles>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}"
                                             Classes.selectedLocbook="{Binding IsSelected}"
                                             Background="#262626"
                                             BorderBrush="#3C3C3C"
                                             BorderThickness="1"
                                             CornerRadius="4"
                                             Padding="6"
                                             HorizontalAlignment="Stretch">
                                        <Expander.Styles>
                                            <Style Selector="Expander.selectedLocbook">
                                                <Setter Property="Background" Value="#2F5C80"/>
                                                <Setter Property="BorderBrush" Value="#3A7CA5"/>
                                            </Style>
                                        </Expander.Styles>
                                        <Expander.Header>
                                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="6" VerticalAlignment="Center">
                                                <StackPanel Orientation="Vertical" Spacing="2">
                                                    <TextBlock Text="{Binding DisplayName}"
                                                              FontSize="14"
                                                              FontWeight="SemiBold"
                                                              Foreground="#F0F0F0"
                                                              TextTrimming="CharacterEllipsis"
                                                              ToolTip.Tip="{Binding DisplayName}"/>
                                                    <TextBlock Text="{Binding FilePath}"
                                                              FontSize="11"
                                                              Foreground="#9AA4AF"
                                                              TextTrimming="CharacterEllipsis"
                                                              ToolTip.Tip="{Binding FilePath}"/>
                                                </StackPanel>
                                                <Button Grid.Column="1"
                                                       Content="â‹®"
                                                       Width="28"
                                                       Height="28"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Right"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       Foreground="#D0D0D0"
                                                       ToolTip.Tip="Locbook actions">
                                                    <Button.Styles>
                                                        <Style Selector="Button:pointerover">
                                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                                            <Setter Property="Background" Value="#3C3C3C"/>
                                                        </Style>
                                                    </Button.Styles>
                                                    <Button.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem Header="Save"
                                                                     Command="{Binding $parent[Window].DataContext.SaveLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <MenuItem Header="Save As..."
                                                                     Command="{Binding $parent[Window].DataContext.SaveAsLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <MenuItem Header="Export"
                                                                     Command="{Binding $parent[Window].DataContext.ExportLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <Separator />
                                                            <MenuItem Header="Close Locbook"
                                                                     Command="{Binding $parent[Window].DataContext.CloseLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                        </ContextMenu>
                                                    </Button.ContextMenu>
                                                    <Button.Flyout>
                                                        <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                            <MenuItem Header="Save"
                                                                     Command="{Binding $parent[Window].DataContext.SaveLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <MenuItem Header="Save As..."
                                                                     Command="{Binding $parent[Window].DataContext.SaveAsLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <MenuItem Header="Export"
                                                                     Command="{Binding $parent[Window].DataContext.ExportLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                            <Separator />
                                                            <MenuItem Header="Close Locbook"
                                                                     Command="{Binding $parent[Window].DataContext.CloseLocbookCommand}"
                                                                     CommandParameter="{Binding}" />
                                                        </MenuFlyout>
                                                    </Button.Flyout>
                                                </Button>
                                            </Grid>
                                        </Expander.Header>
                                        <ListBox ItemsSource="{Binding Pages}"
                                                 SelectedItem="{Binding SelectedPage, Mode=TwoWay}"
                                                 Margin="0,6,0,0"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 HorizontalContentAlignment="Stretch">
                                            <ListBox.Styles>
                                                <Style Selector="ListBoxItem">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="Padding" Value="6"/>
                                                    <Setter Property="Margin" Value="0,2,0,0"/>
                                                </Style>
                                                <Style Selector="ListBoxItem:pointerover">
                                                    <Setter Property="Background" Value="#343434"/>
                                                </Style>
                                                <Style Selector="ListBoxItem:selected">
                                                    <Setter Property="Background" Value="#3A7CA5"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                            </ListBox.Styles>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Vertical" Spacing="2">
                                                        <TextBlock Text="{Binding PageId}"
                                                                  FontWeight="SemiBold"
                                                                  FontSize="13"
                                                                  TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding AboutPage}"
                                                                  FontSize="11"
                                                                  Foreground="#B0B0B0"
                                                                  TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <Border Grid.Row="2"
                            Background="#262626"
                            BorderBrush="#3C3C3C"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="{Binding SelectedLocbook.DisplayName, StringFormat='Editing: {0}', TargetNullValue='Editing: None'}"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="#3A9CDA"
                                      HorizontalAlignment="Center"
                                      TextTrimming="CharacterEllipsis"/>
                            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                                <Button Content="âž• Add Page"
                                       Command="{Binding AddPageCommand}"
                                       IsEnabled="{Binding HasLocbook}"
                                       Padding="16,6"
                                       ToolTip.Tip="Create a new page in the current locbook"/>
                                <Button Content="ðŸ—‘ï¸ Delete"
                                       Command="{Binding DeletePageCommand}"
                                       IsEnabled="{Binding HasSelectedPage}"
                                       Padding="16,6"
                                       ToolTip.Tip="Delete the selected page"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1"
                          Margin="0"
                          Background="#3C3C3C"
                          ResizeDirection="Columns"
                          ShowsPreview="True"/>

            <!-- Main Panel - Fields -->
            <Border Grid.Column="2"
                    Background="#101010"
                    Padding="24">
                <Grid RowDefinitions="Auto,Auto,*" RowSpacing="18">
                    <!-- Page Info Header -->
                    <Border Background="#1E1E1E"
                            BorderBrush="#3C3C3C"
                            BorderThickness="1"
                            Padding="18"
                            CornerRadius="6">
                        <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto" RowSpacing="10" ColumnSpacing="12">
                            <TextBlock Grid.Column="0"
                                      Grid.Row="0"
                                      Text="Page ID"
                                      FontWeight="Bold"
                                      Foreground="#E0E0E0"
                                      VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                    Grid.Row="0"
                                    Text="{Binding SelectedLocbook.SelectedPage.PageId, Mode=TwoWay}"
                                    IsEnabled="{Binding HasSelectedPage}"
                                    HorizontalAlignment="Stretch"/>
                            <TextBlock Grid.Column="0"
                                      Grid.Row="1"
                                      Text="About"
                                      FontWeight="Bold"
                                      Foreground="#E0E0E0"
                                      VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                    Grid.Row="1"
                                    Text="{Binding SelectedLocbook.SelectedPage.AboutPage, Mode=TwoWay}"
                                    IsEnabled="{Binding HasSelectedPage}"
                                    HorizontalAlignment="Stretch"/>
                        </Grid>
                    </Border>

                    <!-- Field Actions -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="âž• Add Field"
                               Command="{Binding AddFieldCommand}"
                               IsEnabled="{Binding HasSelectedPage}"
                               Padding="18,6"/>
                        <Button Content="ðŸŒ Translate Page"
                               Command="{Binding TranslatePageCommand}"
                               IsEnabled="{Binding HasSelectedPage}"
                               Padding="18,6"/>
                    </StackPanel>

                    <!-- Fields List -->
                    <ScrollViewer Grid.Row="2"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <Grid>
                            <Border IsVisible="{Binding !HasSelectedPage}"
                                   Background="#1E1E1E"
                                   BorderBrush="#3C3C3C"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Padding="48"
                                   Margin="40">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                                    <TextBlock Text="ðŸ“„"
                                              FontSize="48"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="No Page Selected"
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Foreground="#E0E0E0"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Create a new page or choose one from the locbook list to begin editing."
                                              FontSize="13"
                                              Foreground="#A0A0A0"
                                              HorizontalAlignment="Center"
                                              TextWrapping="Wrap"
                                              TextAlignment="Center"
                                              MaxWidth="360"/>
                                </StackPanel>
                            </Border>

                            <ItemsControl ItemsSource="{Binding SelectedLocbook.SelectedPage.Fields}"
                                         IsVisible="{Binding HasSelectedPage}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Expander Background="#1E1E1E"
                                                 BorderBrush="#3C3C3C"
                                                 BorderThickness="1"
                                                 Margin="0,0,0,16"
                                                 CornerRadius="6"
                                                 IsExpanded="True">
                                            <Expander.Header>
                                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                                        <TextBlock Text="ðŸ”‘" FontSize="14"/>
                                                        <TextBlock Text="{Binding Key}"
                                                                  FontWeight="Bold"
                                                                  FontSize="14"
                                                                  Foreground="#E0E0E0"/>
                                                        <TextBlock Text="-"
                                                                  Foreground="#808080"
                                                                  FontSize="14"/>
                                                        <TextBlock Text="{Binding OriginalValue}"
                                                                  FontSize="14"
                                                                  Foreground="#A0A0A0"
                                                                  TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
                                                        <Button Content="ðŸŒ"
                                                               Padding="8"
                                                               Command="{Binding $parent[Window].DataContext.TranslateFieldCommand}"
                                                               CommandParameter="{Binding}"
                                                               ToolTip.Tip="Translate Field"/>
                                                        <Button Content="ðŸ—‘ï¸"
                                                               Padding="8"
                                                               Command="{Binding $parent[Window].DataContext.DeleteFieldCommand}"
                                                               CommandParameter="{Binding}"
                                                               ToolTip.Tip="Delete Field"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Expander.Header>
                                            <Border Padding="18" Background="#121212">
                                                <StackPanel Spacing="14">
                                                    <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto" RowSpacing="12" ColumnSpacing="12">
                                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                                  Text="Key"
                                                                  FontWeight="Bold"
                                                                  Foreground="#E0E0E0"
                                                                  VerticalAlignment="Top"/>
                                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                                Text="{Binding Key}"
                                                                AcceptsReturn="False"/>

                                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                                  Text="Original"
                                                                  FontWeight="Bold"
                                                                  Foreground="#E0E0E0"
                                                                  VerticalAlignment="Top"/>
                                                        <TextBox Grid.Row="1" Grid.Column="1"
                                                                Text="{Binding OriginalValue}"
                                                                AcceptsReturn="True"
                                                                TextWrapping="Wrap"
                                                                MinHeight="60"/>
                                                    </Grid>

                                                    <TextBlock Text="Translations"
                                                              FontWeight="Bold"
                                                              Foreground="#E0E0E0"
                                                              Margin="0,6,0,0"/>
                                                    <ItemsControl ItemsSource="{Binding Variants}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnDefinitions="80,*,Auto" ColumnSpacing="10" Margin="0,6">
                                                                    <TextBox Grid.Column="0"
                                                                            Text="{Binding Language}"
                                                                            Width="70"
                                                                            VerticalAlignment="Top"/>
                                                                    <TextBox Grid.Column="1"
                                                                            Text="{Binding Value}"
                                                                            AcceptsReturn="True"
                                                                            TextWrapping="Wrap"
                                                                            MinHeight="60">
                                                                        <TextBox.ContextMenu>
                                                                            <ContextMenu>
                                                                                <MenuItem Header="Translate This Variant"
                                                                                         Command="{Binding $parent[Window].DataContext.TranslateVariantCommand}"
                                                                                         CommandParameter="{Binding}" />
                                                                            </ContextMenu>
                                                                        </TextBox.ContextMenu>
                                                                    </TextBox>
                                                                    <Button Grid.Column="2"
                                                                           Content="ðŸ—‘ï¸"
                                                                           Padding="6"
                                                                           VerticalAlignment="Top"
                                                                           Command="{Binding $parent[Window].DataContext.DeleteVariantCommand}"
                                                                           CommandParameter="{Binding}"
                                                                           ToolTip.Tip="Delete Variant"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <Button Content="âž• Add Variant"
                                                               Padding="14,6"
                                                               Command="{Binding $parent[Window].DataContext.AddVariantCommand}"
                                                               CommandParameter="{Binding}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </Expander>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="3"
                Background="#1F1F1F"
                Padding="12,8"
                BorderBrush="#3C3C3C"
                BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <TextBlock Grid.Column="0"
                          Text="{Binding StatusMessage}"
                          Foreground="#E0E0E0"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="{Binding SelectedLocbook.FileName, TargetNullValue='No file selected'}"
                              Foreground="#E0E0E0"
                              VerticalAlignment="Center"
                              TextTrimming="CharacterEllipsis"
                              Width="200"/>
                    <TextBlock Text="â—"
                              Foreground="#3A7CA5"
                              VerticalAlignment="Center"
                              IsVisible="{Binding SelectedLocbook.HasUnsavedChanges, FallbackValue=False}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
