<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Lingramia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="Lingramia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Lingramia - Localization Editor"
        MinWidth="1000" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="New" Command="{Binding NewFileCommand}" />
                <MenuItem Header="Open" Command="{Binding OpenFileCommand}" />
                <MenuItem Header="Save" Command="{Binding SaveFileCommand}" />
                <MenuItem Header="Save All" Command="{Binding SaveAllLocbooksCommand}" />
                <Separator />
                <MenuItem Header="Save As" Command="{Binding SaveAsFileCommand}" />
                <Separator />
                <MenuItem Header="Export (Per-Language JSON)" Command="{Binding ExportFileCommand}" />
            </MenuItem>
            <MenuItem Header="Translation">
                <MenuItem Header="Configure API Key" Command="{Binding ConfigureApiKeyCommand}" />
                <MenuItem Header="Clear API Key" Command="{Binding ClearApiKeyCommand}" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Command="{Binding ShowAboutDialogCommand}" />
                <Separator />
                <MenuItem Header="Usage Guide" Command="{Binding ShowUsageGuideCommand}" />
                <MenuItem Header="Translation Help" Command="{Binding ShowTranslationHelpCommand}" />
            </MenuItem>
        </Menu>

        <!-- Search Bar -->
        <Border Grid.Row="1" Background="#2B2B2B" Padding="10" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                          Text="ðŸ” Search:"
                          FontSize="14"
                          Foreground="#E0E0E0"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>
                <TextBox Grid.Column="1"
                        Text="{Binding SearchQuery, Mode=TwoWay}"
                        Watermark="Search by Page ID, About, or Key..."
                        VerticalAlignment="Center"/>
                <Button Grid.Column="2"
                       Content="Clear"
                       Command="{Binding ClearSearchCommand}"
                       Margin="10,0,0,0"
                       Padding="15,5"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="260" MaxWidth="480" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="7*" MinWidth="480" />
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Locbooks and Pages -->
            <Border Grid.Column="0" Background="#2B2B2B" BorderBrush="#3C3C3C" BorderThickness="0,0,1,0">
                <Grid Padding="12" RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Spacing="4">
                        <TextBlock Text="Locbooks"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="#E0E0E0"/>
                        <TextBlock Text="Manage open localization books"
                                  FontSize="12"
                                  Foreground="#9DA3AA"/>
                    </StackPanel>

                    <!-- Locbook Actions -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="ðŸ“‚ Open"
                               Command="{Binding OpenFileCommand}"
                               Padding="12,6"
                               FontSize="12"
                               ToolTip.Tip="Open existing locbook file"/>
                        <Button Content="âž• New"
                               Command="{Binding NewFileCommand}"
                               Padding="12,6"
                               FontSize="12"
                               ToolTip.Tip="Create new locbook"/>
                    </StackPanel>

                    <!-- Locbooks List -->
                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding OpenLocbooks}"
                             SelectedItem="{Binding SelectedLocbook, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             HorizontalContentAlignment="Stretch"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Margin" Value="0,4,0,0"/>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover">
                                <Setter Property="Background" Value="#303030"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected:pointerover">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}"
                                         Classes.selectedLocbook="{Binding IsSelected}"
                                         CornerRadius="4"
                                         Margin="0"
                                         Padding="4">
                                    <Expander.Styles>
                                        <Style Selector="Expander">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="#3C3C3C"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                        </Style>
                                        <Style Selector="Expander:selectedLocbook">
                                            <Setter Property="Background" Value="#2B4B6B"/>
                                            <Setter Property="BorderBrush" Value="#3A7CA5"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </Style>
                                    </Expander.Styles>
                                    <Expander.Header>
                                        <Grid Margin="8,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                      Text="{Binding DisplayName}"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="#E0E0E0"
                                                      VerticalAlignment="Center"
                                                      TextTrimming="CharacterEllipsis"
                                                      ToolTip.Tip="{Binding DisplayName}">
                                                <TextBlock.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="Save"
                                                                 Command="{Binding $parent[Window].DataContext.SaveLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <MenuItem Header="Save As..."
                                                                 Command="{Binding $parent[Window].DataContext.SaveAsLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <MenuItem Header="Export"
                                                                 Command="{Binding $parent[Window].DataContext.ExportLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <Separator />
                                                        <MenuItem Header="Close Locbook"
                                                                 Command="{Binding $parent[Window].DataContext.CloseLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                    </ContextMenu>
                                                </TextBlock.ContextMenu>
                                            </TextBlock>
                                            <Button Grid.Column="1"
                                                   Content="â‹®"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Padding="10,4"
                                                   Margin="8,0,0,0"
                                                   Background="Transparent"
                                                   BorderThickness="0"
                                                   Foreground="#A0A0A0"
                                                   ToolTip.Tip="Locbook Actions">
                                                <Button.Styles>
                                                    <Style Selector="Button:pointerover">
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                        <Setter Property="Background" Value="#3C3C3C"/>
                                                    </Style>
                                                </Button.Styles>
                                                <Button.Flyout>
                                                    <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                        <MenuItem Header="Save"
                                                                 Command="{Binding $parent[Window].DataContext.SaveLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <MenuItem Header="Save As..."
                                                                 Command="{Binding $parent[Window].DataContext.SaveAsLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <MenuItem Header="Export"
                                                                 Command="{Binding $parent[Window].DataContext.ExportLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                        <Separator />
                                                        <MenuItem Header="Close Locbook"
                                                                 Command="{Binding $parent[Window].DataContext.CloseLocbookCommand}"
                                                                 CommandParameter="{Binding}" />
                                                    </MenuFlyout>
                                                </Button.Flyout>
                                            </Button>
                                        </Grid>
                                    </Expander.Header>
                                    <ItemsControl ItemsSource="{Binding Pages}" Margin="10,0,0,8">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding PageId}"
                                                       Command="{Binding $parent[Window].DataContext.SelectPageCommand}"
                                                       CommandParameter="{Binding}"
                                                       Margin="5,2"
                                                       Padding="8"
                                                       HorizontalAlignment="Stretch"
                                                       HorizontalContentAlignment="Left"
                                                       Classes.selected="{Binding IsSelected}">
                                                    <Button.Styles>
                                                        <Style Selector="Button">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Setter Property="Foreground" Value="#E0E0E0"/>
                                                        </Style>
                                                        <Style Selector="Button:pointerover">
                                                            <Setter Property="Background" Value="#353535"/>
                                                        </Style>
                                                        <Style Selector="Button.selected">
                                                            <Setter Property="Background" Value="#3A7CA5"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Style>
                                                        <Style Selector="Button.selected:pointerover">
                                                            <Setter Property="Background" Value="#4A8CB5"/>
                                                        </Style>
                                                    </Button.Styles>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Page Actions -->
                    <Border Grid.Row="3"
                           Background="#2B2B2B"
                           BorderBrush="#3C3C3C"
                           BorderThickness="0,1,0,0"
                           Padding="10,12"
                           CornerRadius="6">
                        <StackPanel Spacing="12">
                            <TextBlock Text="{Binding SelectedLocbook.DisplayName, StringFormat='Editing: {0}'}"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Foreground="#3A7CA5"
                                      HorizontalAlignment="Center"
                                      TextTrimming="CharacterEllipsis"/>
                            <StackPanel Orientation="Horizontal"
                                       HorizontalAlignment="Center"
                                       Spacing="10">
                                <Button Content="âž• Add Page"
                                       Command="{Binding AddPageCommand}"
                                       Padding="12,6"/>
                                <Button Content="ðŸ—‘ï¸ Delete"
                                       Command="{Binding DeletePageCommand}"
                                       Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="4" Background="#3C3C3C" HorizontalAlignment="Center" />

            <!-- Main Panel - Fields -->
            <Border Grid.Column="2" Background="#1E1E1E">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Page Info Header -->
                    <Border Grid.Row="0"
                           Background="#2B2B2B"
                           BorderBrush="#3C3C3C"
                           BorderThickness="1"
                           Padding="18"
                           CornerRadius="6"
                           Margin="0,0,0,16">
                        <Grid ColumnSpacing="12" RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                      Text="Page ID:"
                                      FontWeight="Bold"
                                      Foreground="#E0E0E0"
                                      VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                    Text="{Binding SelectedLocbook.SelectedPage.PageId, Mode=TwoWay}"
                                    IsEnabled="{Binding HasSelectedPage}"
                                    Margin="0"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                      Text="About:"
                                      FontWeight="Bold"
                                      Foreground="#E0E0E0"
                                      VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                    Text="{Binding SelectedLocbook.SelectedPage.AboutPage, Mode=TwoWay}"
                                    IsEnabled="{Binding HasSelectedPage}"
                                    Margin="0"/>
                        </Grid>
                    </Border>

                    <!-- Field Actions -->
                    <StackPanel Grid.Row="1"
                               Orientation="Horizontal"
                               Margin="0,0,0,16"
                               Spacing="12">
                        <Button Content="âž• Add Field"
                               Command="{Binding AddFieldCommand}"
                               IsEnabled="{Binding HasSelectedPage}"
                               Padding="12,6"/>
                        <Button Content="ðŸŒ Translate Page"
                               Command="{Binding TranslatePageCommand}"
                               IsEnabled="{Binding HasSelectedPage}"
                               Padding="12,6"/>
                    </StackPanel>

                    <!-- Fields List -->
                    <ScrollViewer Grid.Row="2"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <Grid>
                            <!-- Empty State Message -->
                            <Border IsVisible="{Binding !HasSelectedPage}"
                                   Background="#2B2B2B"
                                   BorderBrush="#3C3C3C"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Padding="40"
                                   Margin="20">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
                                    <TextBlock Text="ðŸ“„"
                                              FontSize="48"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="No Page Selected"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="#E0E0E0"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="Create a new page or select one from the sidebar to begin working"
                                              FontSize="13"
                                              Foreground="#A0A0A0"
                                              HorizontalAlignment="Center"
                                              TextWrapping="Wrap"
                                              TextAlignment="Center"
                                              MaxWidth="360"/>
                                </StackPanel>
                            </Border>

                            <ItemsControl ItemsSource="{Binding SelectedLocbook.SelectedPage.Fields}"
                                         IsVisible="{Binding HasSelectedPage}"
                                         Margin="0,0,0,16">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Expander Background="#2B2B2B"
                                                 BorderBrush="#3C3C3C"
                                                 BorderThickness="1"
                                                 Margin="0,0,0,12"
                                                 CornerRadius="6"
                                                 IsExpanded="True">
                                            <Expander.Header>
                        <Grid Margin="0,4,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                                                        <TextBlock Text="ðŸ”‘" FontSize="14"/>
                                                        <TextBlock Text="{Binding Key}"
                                                                  FontWeight="Bold"
                                                                  FontSize="14"
                                                                  Foreground="#E0E0E0"/>
                                                        <TextBlock Text="-"
                                                                  Foreground="#808080"
                                                                  FontSize="14"/>
                                                        <TextBlock Text="{Binding OriginalValue}"
                                                                  FontSize="14"
                                                                  Foreground="#A0A0A0"
                                                                  TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                                        <Button Content="ðŸŒ"
                                                               Padding="6"
                                                               Command="{Binding $parent[Window].DataContext.TranslateFieldCommand}"
                                                               CommandParameter="{Binding}"
                                                               ToolTip.Tip="Translate Field"/>
                                                        <Button Content="ðŸ—‘ï¸"
                                                               Padding="6"
                                                               Command="{Binding $parent[Window].DataContext.DeleteFieldCommand}"
                                                               CommandParameter="{Binding}"
                                                               ToolTip.Tip="Delete Field"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Expander.Header>
                                            <Border Padding="18" Background="#1E1E1E">
                                                <StackPanel Spacing="12">
                                                    <!-- Field Key and Original Value -->
                                                    <Grid ColumnSpacing="12" RowSpacing="10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="110" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                                  Text="Key:"
                                                                  FontWeight="Bold"
                                                                  Foreground="#E0E0E0"
                                                                  VerticalAlignment="Top"/>
                                                        <TextBox Grid.Row="0" Grid.Column="1"
                                                                Text="{Binding Key}"
                                                                AcceptsReturn="False"
                                                                Margin="0"/>

                                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                                  Text="Original:"
                                                                  FontWeight="Bold"
                                                                  Foreground="#E0E0E0"
                                                                  VerticalAlignment="Top"/>
                                                        <TextBox Grid.Row="1" Grid.Column="1"
                                                                Text="{Binding OriginalValue}"
                                                                AcceptsReturn="True"
                                                                TextWrapping="Wrap"
                                                                MinHeight="60"
                                                                Margin="0"/>
                                                    </Grid>

                                                    <!-- Variants -->
                                                    <TextBlock Text="Translations:"
                                                              FontWeight="Bold"
                                                              Foreground="#E0E0E0"
                                                              Margin="0,8,0,0"/>
                                                    <ItemsControl ItemsSource="{Binding Variants}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnSpacing="10" Margin="0,6">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="80" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBox Grid.Column="0"
                                                                            Text="{Binding Language}"
                                                                            Width="70"
                                                                            VerticalAlignment="Top"/>
                                                                    <TextBox Grid.Column="1"
                                                                            Text="{Binding Value}"
                                                                            AcceptsReturn="True"
                                                                            TextWrapping="Wrap"
                                                                            MinHeight="60">
                                                                        <TextBox.ContextMenu>
                                                                            <ContextMenu>
                                                                                <MenuItem Header="Translate This Variant"
                                                                                         Command="{Binding $parent[Window].DataContext.TranslateVariantCommand}"
                                                                                         CommandParameter="{Binding}" />
                                                                            </ContextMenu>
                                                                        </TextBox.ContextMenu>
                                                                    </TextBox>
                                                                    <Button Grid.Column="2"
                                                                           Content="ðŸ—‘ï¸"
                                                                           Padding="6"
                                                                           VerticalAlignment="Top"
                                                                           Command="{Binding $parent[Window].DataContext.DeleteVariantCommand}"
                                                                           CommandParameter="{Binding}"
                                                                           ToolTip.Tip="Delete Variant"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <!-- Field Actions -->
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <Button Content="âž• Add Variant"
                                                               Padding="10,6"
                                                               Command="{Binding $parent[Window].DataContext.AddVariantCommand}"
                                                               CommandParameter="{Binding}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </Expander>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="3" Background="#2B2B2B" Padding="12,6" BorderBrush="#3C3C3C" BorderThickness="0,1,0,0">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                          Text="{Binding StatusMessage}"
                          Foreground="#E0E0E0"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="{Binding SelectedLocbook.FileName}"
                              Foreground="#E0E0E0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="â—"
                              Foreground="#3A7CA5"
                              VerticalAlignment="Center"
                              IsVisible="{Binding SelectedLocbook.HasUnsavedChanges}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
