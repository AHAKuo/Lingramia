<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Lingramia.Views.AboutDialog"
        Title="About Lingramia"
        Width="500"
        Height="380"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SizeToContent="Manual">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Text="Lingramia"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"/>
        
        <TextBlock Grid.Row="1"
                   Text="Version 1.0.0 Beta"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   Margin="0,0,0,15"/>
        
        <Separator Grid.Row="2" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="3"
                   Text="Lingramia is a modern localization editor designed to simplify the management of translations for multi-language applications. Create, edit, and organize your localization files with ease."
                   FontSize="13"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="4"
                   Text="Features:&#x0a;• AI-powered translations with OpenAI&#x0a;• Multi-language variant management&#x0a;• Export to per-language JSON files&#x0a;• Easy-to-use interface"
                   FontSize="12"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="5"
                   Text="© 2024 AHAKuo Creations"
                   FontSize="11"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   Margin="0,0,0,20"/>
        
        <Button Grid.Row="6"
                Content="OK"
                Width="100"
                Padding="15,8"
                HorizontalAlignment="Center"
                Click="OnOkButtonClick"/>
    </Grid>
</Window>
