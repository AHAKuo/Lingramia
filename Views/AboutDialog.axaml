<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Lingramia.Views.AboutDialog"
        Title="About Lingramia"
        Width="500"
        Height="420"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SizeToContent="Manual">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="AppNameTextBlock"
                   Grid.Row="0"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"/>
        
        <TextBlock x:Name="VersionTextBlock"
                   Grid.Row="1"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   Margin="0,0,0,15"
                   Cursor="Hand"
                   PointerPressed="OnVersionClick"
                   TextDecorations="Underline"/>
        
        <Separator Grid.Row="2" Margin="0,0,0,15"/>
        
        <TextBlock x:Name="DescriptionTextBlock"
                   Grid.Row="3"
                   FontSize="13"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>
        
        <TextBlock x:Name="FeaturesTextBlock"
                   Grid.Row="4"
                   FontSize="12"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>
        
        <TextBlock x:Name="CopyrightTextBlock"
                   Grid.Row="5"
                   FontSize="11"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   Margin="0,0,0,10"/>
        
        <Button Grid.Row="6"
                Content="View on GitHub"
                Width="150"
                Padding="15,8"
                HorizontalAlignment="Center"
                Margin="0,0,0,15"
                Click="OnGitHubLinkClick"/>
        
        <Button Grid.Row="7"
                Content="OK"
                Width="100"
                Padding="15,8"
                HorizontalAlignment="Center"
                Click="OnOkButtonClick"/>
    </Grid>
</Window>
